<div class="modal text-body @ModalClass" tabindex="-1" role="dialog" style="display:@ModalDisplay">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">@ModalTitle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close" @onclick="() => Toggle()">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @ModalBody
            </div>
        </div>
    </div>
</div>

@if (ModalClass == "show")
{
    <div class="modal-backdrop fade show"></div>
}


@code
{
    [Parameter] public RenderFragment ModalTitle { get; set; }
    [Parameter] public RenderFragment ModalBody { get; set; }

    private string ModalDisplay = "none;";
    private string ModalClass = "";

    public void Toggle()
    {
        if (ModalClass == "")
        {
            ModalDisplay = "block;";
            ModalClass = "show";
        }
        else
        {
            ModalDisplay = "none";
            ModalClass = "";
        }
        StateHasChanged();
    }
}
